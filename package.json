{
  "name": "secure-discord",
  "version": "0.0.0",
  "author": "Jason Yuan",
  "description": "A PoC browser extension for end-to-end encrypted Discord messaging.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "svelte",
    "vite",
    "create-chrome-ext"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "wasm-pack build --release rust/webcrypto-rng && vite",
    "build": "wasm-pack build --release rust/webcrypto-rng && vite build",
    "preview": "wasm-pack build --release rust/webcrypto-rng && vite preview",
    "fmt": "prettier --write '**/*.{svelte,ts,json,css,scss,md}'"
  },
  "dependencies": {
    "2key-ratchet": "^1.0.18",
    "webcrypto-rng": "./rust/webcrypto-rng/pkg/"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.19",
    "@sveltejs/vite-plugin-svelte": "2.4.6",
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.9.0",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.1",
    "svelte-preprocess": "^5.0.4",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-top-level-await": "^1.3.1",
    "vite-plugin-wasm": "^3.2.2"
  }
}
